                                <option value="masculino">Masculino</option>
                                <option value="femenino">Femenino</option>
                                <option value="otro">Otro</option>
                                <option value="especifica">No especifica</option>
                            </select>
                            <label for="exampleFormControlInput1" class="form-label">Religión</label>
                            <input class="form-control" placeholder="" type="text" id="escolaridad">
                            <label for="estado" class="form-label">Estado civil</label>
                            <select class="form-select" aria-label="Default select example" id="estado"
                                name="estadoCivil">
                                <option selected>Seleccione</option>
                                <option value="Soltero">Solter@</option>
                                <option value="Casado">Casad@</option>
                                <option value="Divorciado">Divorciad@</option>
                                <option value="Divorciado">Unión Libre</option>
                                <option value="Divorciado">Viud@</option>
                            </select>
