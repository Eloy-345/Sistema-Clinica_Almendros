                            <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close"
                                href="/paciente">Cerrar</button>
                            <button id="insertar" type="button" class="btn btn-primary">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
