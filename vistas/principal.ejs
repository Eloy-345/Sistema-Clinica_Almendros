<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="css/estilos/style.css" />
	<link rel="stylesheet" href="css/style.css">
	<title>Inicio Sesión</title>
</head>

<body>
	<script src="js/funciones/main.js"></script>
	<div class="container">
		<div class="forms-container">
			<div class="signin-signup">
				<div class="login-content ">
					<form action="/auth" method="post">
						<div class="text-center">
							<img src="imagenes/avatar.png">
						</div>
						<div class="input-field">
							<i class="fas fa-user"></i>
							<input type="text" name="username" placeholder="Usuario" id="username" required />
						</div>
						<div class="input-field">
							<i class="fas fa-lock"></i>
							<input type="password" name="password" placeholder="Contraseña" id="password" required />
						</div>
						<input type="submit" value="Ingresar" class="btn solid" />
					</form>
				</div>

				<form action="#" class="sign-up-form">

				</form>
			</div>
		</div>

		<div class="panels-container">
			<div class="panel left-panel">
				<div class="content">
				</div>
				<img src="assets/images/fondo.png" class="image" alt="">
			</div>
			<div class="panel right-panel">
				<div class="content">
					<h3>One of us ?</h3>
					<p>
						Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
						laboriosam ad deleniti.
					</p>
					<button class="btn transparent" id="sign-in-btn">
						Sign in
					</button>
				</div>
				<img src="imagenes/register.svg" class="image" alt="" />
			</div>
		</div>
	</div>


