<%- include ('../plantillas/head', {'titulo': 'Autos' }) %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <%- include ('../plantillas/body') %>
    <script src="js/auto.js"> </script>
    <h1>Registro de Autos</h1>
    
    <table class="table table-dark table-striped">
        <thead>
          <tr>
            <td>id</td>
            <td>Marca</td>
            <td>Modelo</td>
            <td>Precio</td>
            <td>Combustible</td>
          </tr>
        </thead>
        <tbody>
          <% if (alumnos.length>0){ %>
            <% alumnos.forEach(a=> { %>
              <tr>
                <th> <input id="clave" type="hidden" name="id" value="<%= a.id %>"> </th>
                <th> <input id="marca" type="text" name="nombre" value="<%= a.marca %>"> </th>
                <th> <input id="modelo" type="text" name="apellidos" value="<%= a.modelo %>"></th>
                <th> <input id="precio" type="text" name="semestre" value="<%= a.precio %>"></th>
                <th> <input id="combustible" type="text" name="matricula" value="<%= a.combustible %>"></th>
                <th><input id="update" type="submit" class="btn btn-success" value="Actualizar"></th>
                <th><input id="delete" type="submit" class="btn btn-danger" value="Eliminar"></th>
                <th><input id="detalle" type="submit" class="btn btn-warning" value="Ver" ></th>
              </tr>
              <% }) %>
                <% } %>
        </tbody>
      </table>

    <%- include ('../plantillas/footer') %>